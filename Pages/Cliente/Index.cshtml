
@model List<YeserSabillon_PruebaTecnica.Models.Cliente>
@{
}


<h1>Clientes</h1>
<p>
    <a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">Crear Nuevo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-sm btn-warning">Editar</a>

                    <form asp-controller="Cliente" asp-action="Delete" method="post" style="display:inline;"
                          onsubmit="return confirm('¿Está seguro que desea eliminar este cliente?');">
                        <input type="hidden" name="IdCliente" value="@item.IdCliente" />
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
              </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Paginación">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-controller="Cliente" asp-action="Index" asp-route-page="@i">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>

